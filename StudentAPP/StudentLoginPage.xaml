<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentAPP.StudentLoginPage"
             Title="Student Portal"
             BackgroundColor="#F5F7FA">

    <ScrollView>
        <Grid Padding="20" RowSpacing="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <Grid Grid.Row="1" HorizontalOptions="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Logo Placeholder -->
                <Border Grid.Row="0" 
                        BackgroundColor="#2E86AB" 
                        WidthRequest="80" 
                        HeightRequest="80" 
                        HorizontalOptions="Center"
                        Margin="0,0,0,20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="40" />
                    </Border.StrokeShape>
                    <Label Text="SP" 
                           FontSize="32" 
                           FontAttributes="Bold" 
                           TextColor="White" 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center" />
                </Border>

                <Label Grid.Row="1"
                       Text="Student Port" 
                       FontSize="32" 
                       FontAttributes="Bold" 
                       TextColor="#1E3A8A" 
                       HorizontalTextAlignment="Center" />
                <Label Grid.Row="2"
                       Text="Access your academic world" 
                       FontSize="16" 
                       TextColor="#6B7280" 
                       HorizontalTextAlignment="Center" 
                       Margin="0,5,0,0" />
                <Label Grid.Row="3"
                       Text="Login to continue" 
                       FontSize="14" 
                       TextColor="#9CA3AF" 
                       HorizontalTextAlignment="Center" 
                       Margin="0,10,0,0" />
            </Grid>

            <!-- Login Form -->
            <Grid Grid.Row="2" RowSpacing="15" Margin="0,20,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Student ID Field -->
                <Border Grid.Row="0" 
                        BackgroundColor="White" 
                        Stroke="#E5E7EB" 
                        StrokeThickness="1"
                        Padding="15">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" 
                           Source="graduation_cap.png" 
                           WidthRequest="18" 
                           HeightRequest="18" 
                           VerticalOptions="Center" 
                           Margin="0,0,10,0" />

                        <Entry Grid.Column="1"
                               x:Name="StudentIdEntry"
                               Placeholder="Student ID (e.g. STU001)" 
                               PlaceholderColor="#9CA3AF"
                               TextColor="#1F2937"
                               FontSize="16"
                               BackgroundColor="Transparent" />
                    </Grid>
                </Border>

                <!-- Password Field -->
                <Border Grid.Row="1"
                        BackgroundColor="White" 
                        Stroke="#E5E7EB" 
                        StrokeThickness="1"
                        Padding="15">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <Image Grid.Column="0" 
                               Source="padlock.png" 
                               WidthRequest="18" 
                               HeightRequest="18" 
                               VerticalOptions="Center" 
                               Margin="0,0,10,0" />
                        
                        <Entry Grid.Column="1"
                               x:Name="PasswordEntry"
                               Placeholder="Password" 
                               PlaceholderColor="#9CA3AF"
                               TextColor="#1F2937"
                               FontSize="16"
                               IsPassword="True"
                               BackgroundColor="Transparent" />
                                <ImageButton Grid.Column="2"
                                             x:Name="ShowPasswordBtn"
                                             Source="view.png"
                                             BackgroundColor="Transparent"
                                             WidthRequest="8"
                                             HeightRequest="8"
                                             Aspect="AspectFit"
                                             VerticalOptions="Center"
                                             Margin="8,0"
                                             Clicked="OnShowPasswordClicked" />
                    </Grid>
                </Border>

                <!-- Remember Me & Forgot Password -->
                <Grid Grid.Row="2" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <CheckBox Grid.Column="0"
                                  x:Name="RememberMeCheckBox" 
                                  Color="#2E86AB" />
                        <Label Grid.Column="1"
                               Text="Remember me" 
                               TextColor="#6B7280" 
                               FontSize="14" 
                               VerticalOptions="Center" />
                    </Grid>

                    <Label Grid.Column="1"
                           Text="Forgot Password?" 
                           TextColor="#2E86AB" 
                           FontSize="14" 
                           VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnForgotPasswordTapped" />
                        </Label.GestureRecognizers>
                    </Label>
                </Grid>
            </Grid>

            <!-- Login Actions -->
            <Grid Grid.Row="3" RowSpacing="15" Margin="0,20,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Button Grid.Row="0" 
                        x:Name="LoginButton"
                        Text="Login to Portal" 
                        BackgroundColor="#64748B" 
                        TextColor="White" 
                        FontSize="16" 
                        FontAttributes="Bold"
                        HeightRequest="50" 
                        Clicked="OnLoginClicked">
                    <Button.Shadow>
                        <Shadow Brush="#2E86AB" Opacity="0.3" Radius="8" Offset="0,4" />
                    </Button.Shadow>
                </Button>

                <!-- Quick Login Options -->
                <Grid Grid.Row="1" HorizontalOptions="Center" Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="80" />
                    </Grid.ColumnDefinitions>

                    <BoxView Grid.Column="0" 
                             BackgroundColor="#E5E7EB" 
                             HeightRequest="1" 
                             VerticalOptions="Center" />
                    <Label Grid.Column="1" 
                           Text="Quick Access" 
                           TextColor="#9CA3AF" 
                           FontSize="12" 
                           Margin="15,0" 
                           VerticalOptions="Center" />
                    <BoxView Grid.Column="2" 
                             BackgroundColor="#E5E7EB" 
                             HeightRequest="1" 
                             VerticalOptions="Center" />
                </Grid>

                <!-- Demo Login Options -->
                <Grid Grid.Row="2" ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Text="Demo Student"
                            BackgroundColor="#64748B"
                            TextColor="White"
                            FontSize="14"
                            HeightRequest="40"
                            Clicked="OnDemoStudentClicked" />
                    <Button Grid.Column="1"
                            Text="Guest Access"
                            BackgroundColor="#64748B"
                            TextColor="White"
                            FontSize="14"
                            HeightRequest="40"
                            Clicked="OnGuestAccessClicked" />
                </Grid>
            </Grid>

            <!-- Registration Link -->
            <Grid Grid.Row="4" HorizontalOptions="Center" Margin="0,30,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0"
                       Text="New student? " 
                       TextColor="#6B7280" 
                       FontSize="14" />
                <Label Grid.Column="1"
                       Text="Register here" 
                       TextColor="#2E86AB" 
                       FontSize="14" 
                       FontAttributes="Bold">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnRegisterTapped" />
                    </Label.GestureRecognizers>
                </Label>
            </Grid>

        </Grid>
    </ScrollView>

</ContentPage>