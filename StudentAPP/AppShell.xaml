<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StudentAPP.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:StudentAPP"
    Title="Student Portal"
    FlyoutBackgroundColor="#1E293B">

    <!-- Custom Flyout Header -->
    <Shell.FlyoutHeader>
        <Grid BackgroundColor="#1E293B" HeightRequest="200" Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Profile Picture -->
            <Border Grid.Row="1" 
                    BackgroundColor="#3B82F6" 
                    WidthRequest="80" 
                    HeightRequest="80" 
                    HorizontalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="40" />
                </Border.StrokeShape>
                <Label Text="ðŸ‘¤" 
                       FontSize="32" 
                       TextColor="White" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center" />
            </Border>

            <!-- Student Info -->
            <Label Grid.Row="2" 
                   x:Name="StudentNameLabel"
                   Text="Sthembiso Mkhwanazi" 
                   FontSize="18" 
                   FontAttributes="Bold" 
                   TextColor="White" 
                   HorizontalTextAlignment="Center" 
                   Margin="0,10,0,0" />

            <Label Grid.Row="3" 
                   x:Name="StudentIdLabel"
                   Text="STU001" 
                   FontSize="14" 
                   TextColor="#94A3B8" 
                   HorizontalTextAlignment="Center" 
                   Margin="0,5,0,0" />
        </Grid>
    </Shell.FlyoutHeader>

    <!-- Tab Bar Navigation (Better than Flyout for mobile) -->
    <TabBar>
        <ShellContent Title="Dashboard" 
                      Icon="home.png" 
                      Route="dashboard"
                      ContentTemplate="{DataTemplate local:DashboardPage}" />

        <ShellContent Title="Modules" 
                      Icon="modules.png" 
                      Route="modules"
                      ContentTemplate="{DataTemplate local:ModulesPage}" />

        <ShellContent Title="Enrollments" 
                      Icon="enrollments.png" 
                      Route="enrollments"
                      ContentTemplate="{DataTemplate local:EnrollmentsPage}" />

        <ShellContent Title="Profile" 
                      Icon="profile.png" 
                      Route="profile"
                      ContentTemplate="{DataTemplate local:ProfilePage}" />
    </TabBar>

    <!-- Menu Items (in addition to tabs) -->
    <MenuItem Text="ðŸ”§ Settings" 
              Clicked="OnSettingsClicked" />

    <MenuItem Text="ðŸšª Logout" 
              Clicked="OnLogoutClicked" />

</Shell>